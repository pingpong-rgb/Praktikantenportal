<odoo>
    <template id="portal_onboarding" name="Onboarding Portal">
        <t t-call="portal.portal_layout">
            <div class="container mt-4">
                <h2>Onboarding</h2>
                <t t-foreach="items" t-as="item">
                    <div class="card mb-3 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title" t-esc="item.name"/>
                            <p class="card-text" t-esc="item.description"/>
                            <t t-if="item.file">
                                <a t-att-href="'/web/content/intern.onboarding/%s/file/%s?download=true' % (item.id, item.file_name)"
                                   class="btn btn-outline-primary me-2" target="_blank">
                                    <i class="fa fa-file-pdf-o"></i> PDF Ã¶ffnen
                                </a>
                            </t>
                            <t t-if="item.link_url">
                                <a t-att-href="item.link_url" target="_blank"
                                   class="btn btn-outline-secondary">
                                    <i class="fa fa-external-link"></i> Webseite besuchen
                                </a>
                            </t>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <template id="portal_my_home_onboarding"
              inherit_id="portal.portal_my_home"
              name="Portal Home: Onboarding">
        <xpath expr="//div[@id='portal_client_category']" position="inside">
            <div class="o_portal_index_card col-md-6 order-2">
                <a t-att-href="'/my/onboarding'"
                   title="Onboarding"
                   class="d-flex gap-2 gap-md-3 py-3 pe-2 px-md-3 h-100 rounded text-decoration-none bg-100">
                    <div class="o_portal_icon d-block align-self-start">
                        <img t-att-src="'/praktikanten_modul/static/description/onboarding_icon.png'"
                             alt="Onboarding"
                             loading="lazy"
                             style="width:40px;height:40px;"/>
                    </div>
                    <div>
                        <div class="mt-0 mb-1 fs-5 fw-normal lh-1">
                            <span>Onboarding</span>
                        </div>
                        <div class="opacity-75">
                            Infos, Dokumente &amp; hilfreiche Links zum Start.
                        </div>
                    </div>
                </a>
            </div>
        </xpath>
    </template>
</odoo>
<odoo>
    <!-- HR: Voller Zugriff auf Onboarding-Inhalte -->
    <record id="access_intern_onboarding_hr" model="ir.model.access">
        <field name="name">intern.onboarding hr</field>
        <field name="model_id" ref="model_intern_onboarding"/>
        <field name="group_id" ref="praktikanten_modul.group_intern_hr"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <!-- Ausbildungsbetreuer:in – gleiche Rechte wie HR -->
    <record id="access_intern_onboarding_manager" model="ir.model.access">
        <field name="name">intern.onboarding manager</field>
        <field name="model_id" ref="model_intern_onboarding"/>
        <field name="group_id" ref="praktikanten_modul.group_intern_manager"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <!-- Praktikant:in (Portal) – nur lesen -->
    <record id="access_intern_onboarding_portal" model="ir.model.access">
        <field name="name">intern.onboarding portal</field>
        <field name="model_id" ref="model_intern_onboarding"/>
        <field name="group_id" ref="praktikanten_modul.group_intern_portal"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>
</odoo>
